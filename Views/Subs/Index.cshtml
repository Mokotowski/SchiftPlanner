@model List<SchiftPlanner.Models.Subs.Type_Subscriptions>
@using SchiftPlanner.Models.Subs

<div id="mainBoxSubs">
    <div id="ListSubs">
        @foreach (Type_Subscriptions sub in Model)
        {
            <div class="SubElement">
                <div>
                    Price: @sub.Price$
                </div>
                <div>
                    Time Length: @sub.DateLenght days
                </div>
                <div>
                    Client lists: @sub.MaxPlann
                </div>
                <div>
                    Max Users: @sub.MaxPersonforPlann
                </div>
                <div>
                    <form method="post" asp-action="ThanksForBuy" asp-controller="Subs">
                        <input type="hidden" id="Id_Sub" name="Id_Sub" value="@sub.Id_Sub" />
                        <button type="submit">Subscribe</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>



<div id="secondBoxSubs">
    <form id="moreInfoSubs" method="get" asp-action="InfoAboutSubs" asp-controller="Subs">
        <button type="submit">Więcej informacji o subskrypcjach</button>
    </form>

</div>
