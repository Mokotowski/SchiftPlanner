@model SchiftPlanner.Models.Subs.Subscriptions

@{
    ViewData["Title"] = "ManageSub";
}

<h1>ManageSub</h1>



@{
    <div>
        @Model.Id_Company
        @Model.Id_User
        @Model.Id_Sub
        @Model.StartDate
        @Model.EndDate
        @Model.AutoRenew


    
    
    </div>
}


<br />
<br />
<br />
<br />
<br />
<br />


@if(Model.AutoRenew)
{
    <form method="post" asp-action="ChangeAutoRenew" asp-controller="Subs">
        <input type="hidden" id="ChangeAutoRenewfalse" name="subscription" value="@Model" />
        <button type="submit">Wyłącz odnawianie</button>
    </form>
}
else
{
    <form method="post" asp-action="ChangeAutoRenew" asp-controller="Subs">
        <input type="hidden" id="ChangeAutoRenewtrue" name="subscription" value="@Model" />
        <button type="submit">Włącz odnawianie</button>
    </form>
}







<br />
<br />
<br />

<form method="post" asp-action="CancelSubscription" asp-controller="Subs">
    <input type="hidden" id="CancelSubscription" name="subscription" value="@Model" />
    <button type="submit">Anuluj subskrypcje</button>
</form>